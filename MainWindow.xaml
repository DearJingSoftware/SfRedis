<Window x:Class="SfRedis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SfRedis"
        mc:Ignorable="d"
        Title="SfRedis" Height="600" Width="960">
    <Grid Height="569" VerticalAlignment="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="491*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="129*"/>
            <ColumnDefinition Width="347*"/>
        </Grid.ColumnDefinitions>
        <Button Content="连接"  Name="RedisHostConnect"    HorizontalAlignment="Left" Margin="143,0,0,19" Width="48" Click="Button_Redis_Connect" Height="19" VerticalAlignment="Bottom"/>
        <Button Content="断开"  Name="RedisHostDisconnect" HorizontalAlignment="Left" Margin="196,0,0,19" Width="48" Click="Button_Redis_Disconnect" Height="19" VerticalAlignment="Bottom"/>
        <TextBox VerticalContentAlignment="Center" Name="RedisHost" Text="localhost" HorizontalAlignment="Left" Margin="10,0,0,16" TextWrapping="Wrap" Width="120" Height="23" VerticalAlignment="Bottom"/>
        <TextBox VerticalContentAlignment="Center" Name="RedisCommandInput" Grid.Column="1" Margin="15,0,15,20" TextWrapping="Wrap" Text="" TextChanged="RedisCommandInput_TextChanged"  KeyDown="RedisCommandExec_KeyDown" VerticalAlignment="Bottom" Height="17"/>
        <StatusBar Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,0"/>
        <TreeView Grid.Row="1"/>
        <StackPanel Grid.Column="1" Margin="0,0,0,0" Grid.Row="1" HorizontalAlignment="Stretch" >
            <TextBox TextWrapping="Wrap" Text="" Name="RedisResult"  
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            <TextBox TextWrapping="Wrap" Text="" Name="SessionLog"  
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </StackPanel>


    </Grid>
</Window>
