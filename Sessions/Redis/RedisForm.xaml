<Window x:Class="SfRedis.Sessions.Redis.RedisForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SfRedis.Sessions.Redis"
        mc:Ignorable="d"
        Title="RedisForm" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="214*"/>
            <RowDefinition Height="205*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="0,0,0,0">
            <TextBox Height="23" TextWrapping="Wrap" Text="{Binding Path=Name}"/>
            <TextBox Height="23" TextWrapping="Wrap" Text="{Binding Path=Host}"/>
            <TextBox Height="23" TextWrapping="Wrap" Text="{Binding Path=Port}"/>
            <TextBox Height="23" TextWrapping="Wrap" Text="{Binding Path=DB}"/>
            <TextBox Height="23" TextWrapping="Wrap" Text="{Binding Path=Password}"/>
        </StackPanel>
        <Button Content="保存" HorizontalAlignment="Left" Margin="215,56,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="Save_Click" Height="19"/>
        <Button Content="关闭" HorizontalAlignment="Left" Margin="302,58,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="Close_Click" Height="19"/>
    </Grid>
</Window>
